@model ICollection<Bleems.Dev.Test.Models.ProductModel>
@{}
 
  <table  id="productsTbl"  class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr class="text-start fw-bolder fs-5 gs-0">
                    <th class="w-10px pe-2">
                        #
                    </th>
                    <th class="min-w-125px">Name</th>
                    <th class="min-w-125px">Price</th>
                    <th class="min-w-125px">Photo</th>
                    <th class="min-w-125px"></th>
                    <th class="min-w-125px"></th>
                </tr>
            </thead>
            <tbody class="text-gray-600 fw-bold">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(x=> item.ProductId)
                        </td>
                        <td>
                            @Html.DisplayFor(x=> item.ProductName)
                        </td>
                        <td>
                            <div class="badge badge-lg badge-info">@item.ProductPrice</div>
                        </td>
                 
                        <td>
                            <img src="~/productsPhotos/@item.ProductPhoto" 
                            height="100" width="100" 
                            asp-append-version="true" /> 
                        </td>
                    
                
                    </tr>
                }
            </tbody>
        </table>


