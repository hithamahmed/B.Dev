@page
@model Bleems.Dev.Test.Pages.NewProductModel
@{
}

<form method="post" enctype = "multipart/form-data">
    @Html.AntiForgeryToken()
                        
    <div asp-validation-summary="All" class="text-danger"></div>


    <div class="card">
        <div class="card-header">
            <h3 class="card-title">ِNew Product</h3>
        </div>

        <div class="card-body">

            <div class="row">
                <div class="col-lg-3">
                    <div class="mb-5">
                        <div class="form-group">
                            <label for="ProductCategoryId">Choose Category</label>
                            <select class="form-control" name="ProductCategoryId">
                                <vc:Category-Drop-Down></vc:Category-Drop-Down>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-text">#</span>
                            <input name="ProductName" type="text" required class="form-control" placeholder="Name" aria-label="Product Name" />
                        </div>
                        
                        <div class="input-group">
                            <span class="input-group-text">#</span>
                            <input name="ProductDescription" required type="text" class="form-control" placeholder="Description" aria-label="Description" />
                        
                        </div>
                        
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input name="ProductPrice" required class="form-control" placeholder="Price" aria-label="Price" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="productPhoto">Photo</label>
                        <input type="file" required name="ProductPhoto" class="form-control-file" id="productPhoto">
                    </div>
                </div>

            </div>
    
            <div class="card-footer">
                <button class="btn btn-primary" asp-page-handler="AddProduct">Save</button>
            </div>
        </div>
    </div>
   

</form>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
    }
